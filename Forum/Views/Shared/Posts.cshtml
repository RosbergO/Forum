
@model IEnumerable<Forum.Models.TblPosts>

@{
    ViewData["Title"] = ViewBag.category;
}
    <h1>Welcome to the @ViewBag.category discussion</h1>


<button type="button" class="btn btn-primary">
    <a <a asp-area="" asp-controller="Post" asp-action="Create" asp-route-id="@ViewBag.category">Create new thread</a>
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td> 
                <a asp-controller="Post" asp-action="Read" asp-route-id=@item.PoId>
                     @Html.DisplayFor(modelItem => item.PoId)
                </a>
            </td>
            <td>
                <a asp-controller="Post" asp-action="Read" asp-route-id=@item.PoId>
                    @Html.DisplayFor(modelItem => item.PoName)
                </a>
            </td>
            <td>
                <a asp-controller="Post" asp-action="Read" asp-route-id=@item.PoId>
                     @{if(item.PoContent.Length > 60)
                        {

                            item.PoContent = item.PoContent.Substring(0, Math.Min(item.PoContent.Length, 60)) + "...";
                        }
                        
                            @Html.DisplayFor(modelItem => item.PoContent);
                        
                     }
                </a>
            </td>
            <td>
                <a asp-controller="Post" asp-action="Read" asp-route-id=@item.PoId>
                    @Html.DisplayFor(modelItem => item.PoDate)
                </a>
            </td>
            <td>
                <a asp-controller="Post" asp-action="Read" asp-route-id=@item.PoId>
                    @Html.DisplayFor(modelItem => item.PoAuthor)
                </a>
            </td>
            <td>
                <a asp-controller="Post" asp-action="Read" asp-route-id=@item.PoId>
                    @Html.DisplayFor(modelItem => item.PoCategory)
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
  
