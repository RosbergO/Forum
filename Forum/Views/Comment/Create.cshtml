@model Forum.Models.TblComments

<h4>Create a comment!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Comment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CoContent" class="control-label"></label>
                <input asp-for="CoContent" class="form-control" />
                <span asp-validation-for="CoContent" class="text-danger"></span>
            </div>
            @Html.Hidden("CoAuthor", "4")
            @Html.Hidden("CoPost", (object)ViewBag.PostID)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
