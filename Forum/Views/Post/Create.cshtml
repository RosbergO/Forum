@model Forum.Models.TblPosts

@{
    ViewData["Title"] = "Create";
}

<h2>Create Cookie in @ViewBag.category</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PoName" class="control-label"></label>
                <input asp-for="PoName" class="form-control" />
                <span asp-validation-for="PoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoContent" class="control-label"></label>
                <input asp-for="PoContent" class="form-control" />
                <span asp-validation-for="PoContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
