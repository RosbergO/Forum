@model Forum.Models.TblPosts

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>TblPosts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PoName" class="control-label"></label>
                <input asp-for="PoName" class="form-control" value=@Model.PoName />
                <span asp-validation-for="PoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoContent" class="control-label"></label>
                <input asp-for="PoContent" class="form-control" value=@Model.PoContent />
                <span asp-validation-for="PoContent" class="text-danger"></span>
            </div>
            @Html.Hidden("PoAuthor", Model.PoAuthor)
            @Html.Hidden("PoId", Model.PoId)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
